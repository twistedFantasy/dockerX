groups:
- name: postgres
  rules:
    - alert: postgres_down
      expr: pg_up == 0
      for: 1m
      labels:
        severity: critical
      annotations:
        summary: "PostgreSQL down (instance {{ $labels.instance }})"
        description: "PostgreSQL down for 1m\n  VALUE = {{ $value }}\n  LABELS: {{ $labels }}"
